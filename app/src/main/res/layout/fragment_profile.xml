<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_abu">
    <LinearLayout
        android:id="@+id/profile_LL_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

    <ScrollView
        android:id="@+id/profile_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/abu_abu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/profile_linear_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="@color/abu_abu" />

            <ImageView
                android:id="@+id/profiile_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/ic_profile"
                android:elevation="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/xml_round_profile_pic"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coklat"
                android:elevation="4dp"
                android:paddingBottom="24dp"
                android:id="@+id/back_info"
                android:layout_below="@id/header_cover_image">

                <TextView
                    android:id="@+id/sebagai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:text="Tersambung sebagai : " />

                <TextView
                    android:layout_below="@id/sebagai"
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:text="memuat..."
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TV_useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textColor="#fff"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/profile_TV_nomor_telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:textStyle="bold"
            android:id="@+id/profile_TV_kebijakan_privasi"
            android:drawableLeft="@drawable/ic_sheild"
            android:padding="15dp"
            android:drawablePadding="30dp"
            android:textColor="@color/hitam_pekat"
            android:text="Kebijakan dan Privasi" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:textStyle="bold"
            android:id="@+id/profile_TV_ketentuan_layanan"
            android:drawableLeft="@drawable/ic_burger_menu"
            android:padding="15dp"
            android:drawablePadding="30dp"
            android:textColor="@color/hitam_pekat"
            android:text="Ketentuan Layanan" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:textStyle="bold"
            android:id="@+id/profile_TV_setting"
            android:drawableLeft="@drawable/ic_settings"
            android:padding="15dp"
            android:drawablePadding="30dp"
            android:textColor="@color/hitam_pekat"
            android:text="Pengaturan" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:textStyle="bold"
            android:id="@+id/profile_TV_rate_us"
            android:drawableLeft="@drawable/ic_star"
            android:padding="15dp"
            android:drawablePadding="30dp"
            android:textColor="@color/hitam_pekat"
            android:text="Beri kami nilai !" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:textStyle="bold"
            android:id="@+id/profile_TV_help"
            android:drawableLeft="@drawable/ic_help"
            android:padding="15dp"
            android:drawablePadding="30dp"
            android:textColor="@color/hitam_pekat"
            android:text="Bantuan" />

        <Button
            android:id="@+id/profile_BT_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_exit"
            android:drawablePadding="15dp"
            android:text="KELUAR"
            android:textColor="@color/merah" />

    </LinearLayout>

    </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>