<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.activity_profile_pengaturan">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/abu_abu"
            android:orientation="vertical" >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/putih"
                android:layout_margin="5dp"
                android:id="@+id/profile_TR_conected_biodata">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/xml_round_profile_pic"
                    android:src="@drawable/coffee_default"
                    android:elevation="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside">
                </ImageView>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_TL_biodata"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kopi Gunungmalang Official"
                        android:id="@+id/profile_TV_name"
                        android:textColor="@color/hitam_pekat"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kopigunungmalang@gmail.com"
                        android:id="@+id/profile_TV_email"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="087839053805"
                        android:id="@+id/profile_TV_phone_number"
                        android:textSize="12dp"/>
                </TableLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UBAH"
                    android:id="@+id/profile_TV_ubah"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textSize="18dp"/>
            </TableRow>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:id="@+id/pengaturan_rubah_password"
                android:drawableLeft="@drawable/ic_password"
                android:padding="15dp"
                android:drawablePadding="30dp"
                android:textColor="@color/hitam_pekat"
                android:text="Ubah Password" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>