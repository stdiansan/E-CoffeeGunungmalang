<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_abu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/putih"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/coffee_default" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/notif_TV_judul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/hitam_pekat"
                        android:textSize="16dp"
                        android:text="DISKON 50%" />

                    <TextView
                        android:id="@+id/notif_TV_konten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="berlaku setiap pembelian 5kg kopi Arabika" />
                    <TextView
                        android:id="@+id/notif_TV_waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="20 Septermber - 1 Oktober 2019" />
                </TableLayout>

                <Button
                    android:id="@+id/notif_BT_lihat"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/coklat"
                    android:textColor="@color/putih"
                    android:text="Cek promo" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/notif_Image_promo"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/coffee_default" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/notif_TV_judul2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/hitam_pekat"
                            android:textSize="16dp"
                            android:text="DISKON 50%" />

                        <TextView
                            android:id="@+id/notif_TV_konten2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="berlaku setiap pembelian 5kg kopi Arabika" />
                        <TextView
                            android:id="@+id/notif_TV_waktu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="20 Septermber - 1 Oktober 2019" />
                    </TableLayout>

                    <Button
                        android:id="@+id/notif_BT_lihat3"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/coklat"
                        android:textColor="@color/putih"
                        android:text="Cek promo" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>