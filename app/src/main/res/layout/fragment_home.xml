<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_abu">
    <LinearLayout
        android:id="@+id/home_LL_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <ScrollView
            android:id="@+id/home_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abu_abu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/home_linear_parent"
                android:background="#E1E1E1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/home_grid_produk1"
                android:layout_marginBottom="0dp"
                android:columnCount="2"
                android:rowCount="2"
                android:elevation="6dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="2dp"
                    android:id="@+id/home_CV_produk1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/coffee_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginBottom="5dp"
                            android:text="Kopi Madu"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_TR_produk1">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/home_TL_produk1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/home_TV_berat_produk1"
                                android:text="1kg"
                                android:textColor="#000000"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/home_TV_harga_produk1"
                                android:text="RP. 50000"
                                android:textColor="#000000"></TextView>
                        </TableLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/home_BT_produk1"
                                android:layout_gravity="center"
                                android:text="Tambah"
                                android:textColor="#FFF"
                                android:background="#42A452"></Button>
                        </TableRow>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="2dp"
                    android:id="@+id/home_CV_produk2"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/coffee_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginBottom="5dp"
                            android:text="Kopi Arabika"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_TR_produk2">

                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/home_TL_produk2">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_berat_produk2"
                                    android:text="1kg"
                                    android:textColor="#000000"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_harga_produk2"
                                    android:text="RP. 65000"
                                    android:textColor="#000000"></TextView>
                            </TableLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/home_BT_produk2"
                                android:layout_gravity="center"
                                android:text="Tambah"
                                android:textColor="#FFF"
                                android:background="#42A452"></Button>
                        </TableRow>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    android:id="@+id/home_CV_produk3"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/coffee_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginBottom="5dp"
                            android:text="Kopi Luak"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_TR_produk3">

                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/home_TL_produk3">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_berat_produk3"
                                    android:text="1kg"
                                    android:textColor="#000000"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_harga_produk3"
                                    android:text="RP. 55000"
                                    android:textColor="#000000"></TextView>
                            </TableLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/home_BT_produk3"
                                android:layout_gravity="center"
                                android:text="Tambah"
                                android:textColor="#FFF"
                                android:background="#42A452"></Button>
                        </TableRow>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    android:id="@+id/home_CV_produk4"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/coffee_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginBottom="5dp"
                            android:text="Kopi Robusta"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_TR_produk4">

                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/home_TL_produk4">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_berat_produk4"
                                    android:text="1kg"
                                    android:textColor="#000000"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/home_TV_harga_produk4"
                                    android:text="RP. 50000"
                                    android:textColor="#000000"></TextView>
                            </TableLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/home_BT_produk4"
                                android:layout_gravity="center"
                                android:text="Tambah"
                                android:textColor="#FFF"
                                android:background="#42A452"></Button>
                        </TableRow>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>